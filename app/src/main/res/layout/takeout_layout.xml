<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:id="@id/backButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_arrow"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Clear"
            android:textAllCaps="false"
            android:background="#9acd32"
            android:layout_weight="1.5"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Order"
            android:id="@+id/orderBtn"
            android:textAllCaps="false"
            android:background="#b9d3ee"
            android:layout_weight="1.5"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:background="@drawable/search"
            android:layout_weight="0.5"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <Button
                android:id="@+id/saladButton"
                android:text="Salad"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />

            <Button
                android:id="@+id/sandwichButton"
                android:background="@drawable/button"
                android:text="Sandwiches"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <Button
                android:id="@+id/mainButton"
                android:background="@drawable/button"
                android:text="Main"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <Button
                android:id="@+id/appetizerButton"
                android:text="Appetizers"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />

            <Button
                android:id="@+id/sweetButton"
                android:text="Sweets"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <Button
                android:background="@drawable/button"
                android:id="@+id/drinkButton"
                android:text="Drinks"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/dish1"

                android:text="Arugula \n $12.00"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />

            <Button
                android:text="Arugula \n $12.00"
                android:id="@+id/dish2"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/dish3"
                android:text="Arugula \n $12.00"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />

            <Button
                android:id="@+id/dish4"
                android:text="Arugula \n $12.00"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/dish5"
                android:text="Arugula \n $12.00"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />


            <Button
                android:id="@+id/dish6"
                android:text="Arugula \n $12.00"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:text="Send"
            android:background="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

    </RelativeLayout>

</LinearLayout>
